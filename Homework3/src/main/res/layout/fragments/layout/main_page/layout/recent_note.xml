<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="175dp"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/roundy_solid_grey">

    <TextView
        android:id="@+id/fragment_main_page_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainPage_sample"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_main_page_tvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/MainPage_sample"
        android:textColor="@color/third"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_main_page_tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main_page_tvTitle" />

    <TextView
        android:id="@+id/fragment_main_page_tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainPage_sample"
        android:textColor="@color/third"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>